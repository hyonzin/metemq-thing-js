{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "./build",
        "rootDir": "./src",
        "moduleResolution": "node",
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "src/**/*",
        "typings/**/*"
    ],
    "compileOnSave": true,
    "atom": {
        "rewriteTsconfig": true
    }
}
