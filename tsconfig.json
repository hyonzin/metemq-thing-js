{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "typings/index.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "src/config.ts",
        "src/index.ts",
        "src/src/config.ts",
        "src/src/index.ts",
        "src/Thing.ts",
        "typings/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
